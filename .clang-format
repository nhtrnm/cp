---
# Options are compatible with clang-format 19.1.0:
# https://releases.llvm.org/19.1.0/tools/clang/docs/ClangFormatStyleOptions.html
# 
# Commented options match LLVM defaults and are kept here explicitly as settings worth
# preserving - revisit them if BasedOnStyle changes.
Language                                 : Cpp
BasedOnStyle                             : LLVM
AccessModifierOffset                     : -4
AllowAllArgumentsOnNextLine              : false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortFunctionsOnASingleLine         : Empty
BinPackArguments                         : false
BinPackParameters                        : false
BraceWrapping                            :
  AfterCaseLabel                         : false
  AfterClass                             : true
  AfterControlStatement                  : MultiLine
  AfterEnum                              : true
  AfterExternBlock                       : true
  AfterFunction                          : true
  AfterNamespace                         : true
  AfterStruct                            : true
  AfterUnion                             : true
  BeforeCatch                            : true
  BeforeElse                             : true
  BeforeLambdaBody                       : false
  BeforeWhile                            : true
  IndentBraces                           : false
  SplitEmptyFunction                     : false
  SplitEmptyRecord                       : false
  SplitEmptyNamespace                    : false
BreakBeforeBraces                        : Custom
BreakTemplateDeclarations                : Yes
ColumnLimit                              : 88
# FixNamespaceComments                     : true
# IndentAccessModifiers                    : false
# IndentCaseLabels                         : false
IndentWidth                              : 4
InsertNewlineAtEOF                       : true
# NamespaceIndentation                     : None
PackConstructorInitializers              : CurrentLine
# PointerAlignment                         : Right
# ReferenceAlignment                       : Pointer
ReflowComments                           : false
SeparateDefinitionBlocks                 : Always
# SpaceAfterCStyleCast                     : false
Standard                                 : c++20
TabWidth                                 : 4
# UseTab                                   : Never
...
